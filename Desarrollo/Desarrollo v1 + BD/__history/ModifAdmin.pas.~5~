begin
    edit1.Text:='';
    Edit2.ReadOnly:=False;
    Edit3.ReadOnly:=False;
    Edit4.ReadOnly:=False;
    Edit5.ReadOnly:=False;
    Edit6.ReadOnly:=False;
    Edit7.ReadOnly:=False;
    Edit8.ReadOnly:=False;
    Edit9.ReadOnly:=False;
    Edit10.ReadOnly:=False;
