procedure TFormLogin.SpeedButton2Click(Sender: TObject);
var User:String; Pwd:String; Consulta:String; Consulta2:String;
begin
//   FormPrincipal.showmodal;
//   FormLogin.Close;
//   Consultas Administrador
   User := Edit1.Text;
   Pwd := Edit2.Text;

   DataModule1.VerificarAdministrador.Close;
