   DataModule1.VerificarCliente.Close;
   //Consulta2:=(DataModule1.VerificarAdministrador.FieldByName('Clave').AsString);
//    if Boolean(compareStr(unit1.DataModule1.VerificarAdministrador.FieldByName('Usuario').asString,'root')) then
    if (Consulta= 'root')  then begin
